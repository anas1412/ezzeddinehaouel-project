<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<h1 class="text-center">Create new Honoraire</h1>

			{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

			<div class="form-group">
				{{ form_label(form.note, 'Note', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
				<div class="col-sm-10">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text">
								<i class="fas fa-sticky-note"></i>
							</span>
						</div>
						{{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.objet, 'Objet', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
				<div class="col-sm-10">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text">
								<i class="fas fa-object-group"></i>
							</span>
						</div>
						{{ form_widget(form.objet, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.montantht, 'Montant HT', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
				<div class="col-sm-10">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text">
								<i class="fas fa-money-bill-wave"></i>
							</span>
						</div>
						{{ form_widget(form.montantht, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
				</div>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
</div>
